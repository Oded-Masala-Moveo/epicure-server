{
	"apps": [
		{
			"name": "epicure-server",
			"script": "./dist/server.js",
			"env": {
			 "NODE_ENV": "development"
			}
		}
	],
	"deploy": {
		"staging": {
			"key": "~/Downloads/epicure-app-key.pem",
			"user": "ubuntu",
			"host": ["ec2-18-197-19-24.eu-central-1.compute.amazonaws.com"],
			"ref": "origin/dev",
			"repo": "git@github.com:Oded-Masala-Moveo/Epicure-app.git",
			"path": "/home/ubuntu/Epicure/Server/source/server/dist/server.js",
			"ssh_options": "StrictHostKeyChecking=no",
			"post-deploy": "mkdir -p logs && cd server && npm install && pm2 reload ecosystem.json --env staging",
			"pre-deploy-local": "echo 'Deploying code to servers'",
			"env": {
				"NODE_ENV": "staging"
			}
		}
	}
}

